@model InscripcionMaterias.Models.ViewModels.InscripcionViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h2 {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Inscripción de Materias</h2>
    <p><strong>Alumno:</strong> @Model.NombreAlumno</p>
    <p><strong>Carnet:</strong> @Model.Carnet</p>
    <p><strong>Ciclo:</strong> @Model.CicloAcademico -  @Model.Anio</p>

    <table>
        <thead>
            <tr>
                <th>Materia</th>
                <th>Grupo</th>
                <th>Horarios</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MateriasSeleccionadas)
            {
                <tr>
                    <td>@item.MateriaNombre</td>
                    <td>@item.Grupo</td>
                    <td>
                        @foreach (var h in item.Horarios)
                        {
                            @h
                    
                            <br />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
