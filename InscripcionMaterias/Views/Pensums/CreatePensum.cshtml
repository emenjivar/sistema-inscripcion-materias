@model InscripcionMaterias.Models.Pensum

<form asp-action="Create" method="post" id="formCreatePensum">
    <div class="row">
        <div class="col-md-12">
            <!-- Carrera -->
            <div class="form-group">
                <label asp-for="Carrera" class="control-label">Carrera</label>
                <input asp-for="Carrera" class="form-control" />
                <span asp-validation-for="Carrera" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <!-- Tipo de Carrera -->
            <div class="form-group">
                <label asp-for="TipoCarrera" class="control-label">Tipo de Carrera</label>
                <select asp-for="TipoCarrera" class="form-control" required>
                    <option value="">-- Seleccione --</option>
                    <option value="Técnico">Técnico</option>
                    <option value="Ingeniería">Ingeniería</option>
                </select>
                <span asp-validation-for="TipoCarrera" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <!-- Cantidad de Ciclos -->
            <div class="form-group">
                <label asp-for="CantidadCiclos" class="control-label">Cantidad de Ciclos</label>
                <input asp-for="CantidadCiclos" type="number" min="1" class="form-control" />
                <span asp-validation-for="CantidadCiclos" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Guardar" class="btn btn-success" />
    </div>
</form>
