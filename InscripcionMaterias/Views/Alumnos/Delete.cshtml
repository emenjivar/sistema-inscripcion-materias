@model InscripcionMaterias.Models.Alumno

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Alumno</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Carnet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Carnet)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdPensum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPensum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuario)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post" onsubmit="return confirm('¿Estás seguro que deseas eliminar este alumno?');">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" title="Eliminar">
            <i class="fas fa-trash-alt"></i> Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary" title="Regresar">
            <i class="fa fa-arrow-left" aria-hidden="true"></i> Volver
        </a>
    </form>

</div>
